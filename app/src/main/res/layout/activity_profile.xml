<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#FEF8DD">

    <ImageView
        android:id="@+id/backarrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:src="@drawable/back_arrow">

    </ImageView>

    <!-- Profile Header -->
    <LinearLayout
        android:id="@+id/profileHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="40dp"
        android:layout_alignParentTop="true"
        android:gravity="center_horizontal">

        <ImageView
            android:id="@+id/profileImage"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/profile"
            android:layout_marginTop="24dp"
            android:layout_gravity="center" />

        <TextView
            android:id="@+id/username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ali"
            android:textSize="20sp"
            android:layout_marginTop="8dp" />


    </LinearLayout>

    <!-- Action Buttons Row -->
    <LinearLayout
        android:id="@+id/actionButtons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/profileHeader"
        android:layout_marginTop="16dp"
        android:gravity="center">



        <!-- Notification Button -->
        <Button
            android:id="@+id/notificationButton"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:fontFamily="@font/designer"
            android:backgroundTint="#FFC300 "
            android:drawableLeft="@drawable/notification_bell"
            android:text="Notification" />
    </LinearLayout>

    <!-- User Details Section -->
    <LinearLayout
        android:id="@+id/userDetailsSection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:layout_below="@id/actionButtons"
        android:layout_marginTop="16dp">

        <!-- Password Row -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </RelativeLayout>





        <TextView
            android:id="@+id/emailtext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Your Email:"
            android:textSize="20sp">
        </TextView>

        <TextView
            android:id="@+id/emailLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:text="Email:"
            android:layout_marginTop="0dp"
            android:textSize="18sp"
            android:textAppearance="?android:attr/textAppearanceListItem" />

        <TextView
            android:id="@+id/contacttext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Your Contact:"
            android:layout_marginTop="5dp"
            android:textSize="20sp">
        </TextView>



            <TextView
                android:id="@+id/ContactLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:layout_marginTop="5dp"
                android:text="Contact:"
                android:textSize="18sp"
                android:textAppearance="?android:attr/textAppearanceListItem" />


        <TextView
            android:id="@+id/countrytext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Your Country:"
            android:layout_marginTop="5dp"
            android:textSize="20sp">
        </TextView>

            <TextView
                android:id="@+id/CountryLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:layout_marginTop="1dp"
                android:text="Country:"
                android:textSize="18sp"
                android:textAppearance="?android:attr/textAppearanceListItem" />


        <TextView
            android:id="@+id/userroletext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="User Role:"
            android:layout_marginTop="5dp"
            android:textSize="20sp">
        </TextView>

        <TextView
            android:id="@+id/roleLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:layout_marginTop="1dp"
            android:text="Role:"
            android:textSize="18sp"
            android:textAppearance="?android:attr/textAppearanceListItem" />

    </LinearLayout>

    <Button
        android:id="@+id/editprofile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/userDetailsSection"
        android:layout_marginStart="97dp"
        android:layout_marginTop="41dp"
        android:backgroundTint="#FFC300 "
        android:fontFamily="@font/designer"
        android:text="Edit Profile"
        android:textSize="22sp">

    </Button>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#FFC300"
        app:menu="@menu/bottom_navigation_menu" />


</RelativeLayout>
