<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:background="@drawable/lo1">

    <TextView
        android:id="@+id/textViewTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="96dp"
        android:text="@string/app_name"
        android:textColor="#1ebbd7"
        android:textSize="40sp"
        android:textStyle="bold"
        android:fontFamily="@font/adorablehandmade" />

    <LinearLayout
        android:id="@+id/l1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Login"
            android:textSize="40sp"
            android:textColor="#FFC300 "
            android:fontFamily="@font/designer"
            android:layout_marginTop="15dp"
            >
        </TextView>

        <EditText
            android:id="@+id/editTextEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edittext_background"
            android:hint="Email"
            android:layout_marginTop="20dp"
            android:textSize="25sp"
            android:inputType="textEmailAddress" />

        <EditText
            android:id="@+id/editTextPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@drawable/edittext_background"
            android:hint="Password"
            android:textSize="25sp"
            android:inputType="textPassword" />

        <Spinner
            android:id="@+id/Role"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edittext_background"
            android:layout_marginTop="16dp"
            >

        </Spinner>


        <TextView
            android:id="@+id/forgotPasswordTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Forgot Your Password?"
            android:textSize="20sp"
            android:clickable="true"
            android:focusable="true"
            android:textStyle="bold"
            android:layout_gravity="end"
            android:layout_marginTop="8dp"
            android:textColor="#ffffff"/>


    </LinearLayout>

    <Button
        android:id="@+id/buttonLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/l1"
        android:layout_marginStart="120dp"
        android:layout_marginTop="19dp"
        android:backgroundTint="#FFC300 "
        android:fontFamily="@font/designer"
        android:text="Login"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/textViewRegister"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/l1"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="79dp"
        android:layout_marginBottom="18dp"
        android:clickable="true"
        android:focusable="true"
        android:text="Don't have an account? Sign Up"
        android:textColor="#FFC300 "
        android:textSize="25sp"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/guestbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/l1"
        android:layout_gravity="center_horizontal"
        android:layout_marginStart="94dp"
        android:layout_marginTop="131dp"
        android:background="@drawable/button_background"
        android:clickable="true"
        android:focusable="true"
        android:orientation="horizontal"
        android:padding="8dp">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/guest1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="Login as Guest"
            android:textColor="#FFFFFF"
            android:textSize="20sp" />
    </LinearLayout>


</RelativeLayout>
